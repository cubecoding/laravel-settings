{
    "name": "cubecoding/laravel-settings",
    "description": "A minimal Laravel package for storing project settings in database",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Romankiewicz",
            "email": "hallo@cubecoding.de"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "files": ["src/helpers.php"],
        "psr-4": {
            "Cubecoding\\Settings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cubecoding\\Settings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cubecoding\\Settings\\SettingsServiceProvider"
            ],
            "aliases": {
                "Settings": "Cubecoding\\Settings\\Facades\\Settings"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-feature": "phpunit tests/Feature",
        "test-unit": "phpunit tests/Unit",
        "format": "pint",
        "format-test": "pint --test"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
